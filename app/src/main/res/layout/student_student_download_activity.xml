<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_student_download_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sem8.integrate.app.mainapp_1.Student.Student_Download">

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Subject: -"
                android:textSize="20dp"
                android:id="@+id/sub_tv"
                android:textColor="#000"
                tools:ignore="SpUsage" />

            <Spinner
                android:id="@+id/sub_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Category: -"
                android:textSize="20dp"
                android:id="@+id/cat_tv"
                android:textColor="#000" />

            <Spinner
                android:id="@+id/cat_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

        <android.support.v4.widget.Space
            android:layout_width="10dp"
            android:layout_height="20dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select File Type: -"
                android:textSize="20dp"
                android:id="@+id/file_tv"
                android:textColor="#000"
                tools:ignore="SpUsage" />

            <Spinner
                android:id="@+id/file_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2.2dp"
        android:layout_marginTop="145dp"
        android:elevation="7dp"
        android:background="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List of Available Files"
        android:textSize="35sp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_marginTop="158dp"
        android:id="@+id/list_tv"
        tools:ignore="HardcodedText" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_marginTop="206dp"
        android:id="@+id/listView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Get List"
        android:textColor="#fff"
        android:background="#50cbe1"
        android:id="@+id/get_btn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
